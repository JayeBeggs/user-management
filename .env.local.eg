# --- Application/Test controls ---
NUM_USERS=5
HEADLESS=0                   # 1=headless, 0=headed
DEV_MODE=1                   # 1=enable dev-only windows/delays; 0=fast CI

# --- Browser/channel selection ---
PW_BROWSER_CHANNEL=chrome    # chromium | chrome | msedge | etc
CDM_PW_BROWSER_CHANNEL=chrome

# --- App auth (Vercel/app.st4ge.com) ---
APP_WEB_URL=https://app.st4ge.com
PLAYWRIGHT_STORAGE_STATE=./e2e/web/auth/.app_state.json
APP_WAIT_SELECTOR=           # e.g. [data-test="user-avatar"]
APP_WAIT_URL_REGEX=          # e.g. ^https://app\.st4ge\.com/(dashboard|home)

# --- CDM / Django admin ---
CDM_UI_URL=https://cdm.st4ge.com/
DJANGO_ADMIN_USERS_URL=https://cdm.st4ge.com/2tNFZrSGvTr9CqKM8Wsf5alcO9mBNwo4/users/user/
CDM_OTP_URL=https://cdm.st4ge.com/2tNFZrSGvTr9CqKM8Wsf5alcO9mBNwo4/users/otp/?o=-5
DJANGO_ADMIN_USERNAME=
DJANGO_ADMIN_PASSWORD=
ADMIN_USERNAME=              # optional fallback
ADMIN_PASSWORD=              # optional fallback
PLAYWRIGHT_CDM_STATE=./e2e/web/auth/.cdm_state.json

# --- OTP handling ---
OTP_SEPARATE_BROWSER=0       # 1=launch separate browser for admin OTP
OTP_CHECK_SELECTOR=          # optional selector to detect OTP prompt

# --- Phone/inputs ---
PHONE_SELECTOR=              # override phone input selector if needed

# --- KYC / timing tweaks ---
INSPECT_DELAY_MS=100
INSPECT_CDM_DELAY_MS=100
INSPECT_CDM_AFTER_SUBMIT_MS=100
INSPECT_CDM_AFTER_RACE_MS=100
INSPECT_CDM_AFTER_APPROVE_MS=100
OTP_ADMIN_TIMEOUT=100000
APP_WAIT_SECONDS=100
INSPECT_APP_AFTER_APPROVE_MS=1000000

# --- CDM verification defaults ---
RACE_OPTION=coloured         # african | coloured | indian | white | other

# --- Misc/test data seed ---
TEST_SEED=                   # optional; auto-generated when empty

# --- Onboarding defaults ---
EMPLOYED=1                   # 1=Yes employed; 0=No

# --- Optional fake camera feed for web video ---
CAMERA_Y4M=                  # path to .y4m file for fake camera

# --- Test media generation overrides ---
TEST_ID=                     # optional; force SA ID used for media gen
TEST_NAME=                   # optional; force name used for media gen
INCOME_BAND=highest          # highest | mid | low
TAX_REGION=sa_only           # sa_only | sa_and_other

DEBT_REVIEW=0              # 1=under debt review/insolvent; 0=no

DEFAULT_PHONE=              # optional; 10-12 digit phone for login

